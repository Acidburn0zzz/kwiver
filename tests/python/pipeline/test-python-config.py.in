import sys


stderr = sys.stderr


def test_import():
    try:
        import vistk.pipeline.config
    except:
        stderr.write("Error: Failed to import the config module")


def test_create():
    from vistk.pipeline import config

    try:
        config.empty_config()
    except:
        stderr.write("Error: Failed to create an empty configuration")


def main(testname):
    if testname == 'import':
        test_import()
    elif testname == 'create':
        test_create()
    else:
        stderr.write("Error: No such test '%s'" % testname)


if __name__ == '__main__':
    if not len(sys.argv) == 3:
        stderr.write("Error: Expected two arguments")
        sys.exit(1)

    testname = sys.argv[1]

    sys.path.append(sys.argv[2])

    main(testname)
