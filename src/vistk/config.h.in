#ifndef VISTK_CONFIG_H
#define VISTK_CONFIG_H

/**
 * \file config.h
 *
 * \brief Macros for symbol management in vistk.
 */

/**
 * \def VISTK_EXPORT
 *
 * \brief Export a symbol for use outside the library.
 */
/**
 * \def VISTK_IMPORT
 *
 * \brief Use a symbol from another library.
 */
/**
 * \def VISTK_NO_EXPORT
 *
 * \brief Hide the symbol from outside the library.
 */
/**
 * \def VISTK_DEPRECATED
 *
 * \brief Mark the symbol as deprecated.
 *
 * \param msg A message about the deprecation.
 */
/**
 * \def VISTK_NO_RETURN
 *
 * \brief The function will never return.
 */
/**
 * \def VISTK_MUST_USE_RESULT
 *
 * \brief The return value of the function must be used.
 */
/**
 * \def VISTK_UNUSED
 *
 * \brief The function may be unreferenced.
 */

#if defined(_WIN32) || defined(_WIN64)
#define VISTK_EXPORT __declspec(dllexport)
#define VISTK_IMPORT __declspec(dllimport)
#define VISTK_NO_EXPORT
#define VISTK_DEPRECATED(msg) __declspec(deprecated(msg))
#define VISTK_NO_RETURN __declspec(noreturn)
// Unsupported.
#define VISTK_MUST_USE_RESULT
#else
#ifdef __GNUC__
#define VISTK_DEPRECATED(msg) __attribute__((__deprecated__(msg)))
#define VISTK_NO_RETURN __attribute__((__noreturn__))
#define VISTK_MUST_USE_RESULT __attribute__((__warn_unused_result__))
#else
// Unsupported.
#define VISTK_DEPRECATED(msg)
// Unsupported.
#define VISTK_NO_RETURN
// Unsupported.
#define VISTK_MUST_USE_RESULT
#endif

#cmakedefine VISTK_HAVE_GCC_VISIBILITY
#ifdef VISTK_HAVE_GCC_VISIBILITY
#define VISTK_EXPORT __attribute__((__visibility__("default")))
#define VISTK_IMPORT __attribute__((__visibility__("default")))
#define VISTK_NO_EXPORT __attribute__((__visibility__("hidden")))
#else
// Unsupported.
#define VISTK_EXPORT
// Unsupported.
#define VISTK_IMPORT
// Unsupported.
#define VISTK_NO_EXPORT
#endif
#endif

#endif // VISTK_CONFIG_H
