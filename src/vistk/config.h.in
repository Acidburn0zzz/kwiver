#ifndef VISTK_CONFIG_H
#define VISTK_CONFIG_H

#if defined(_WIN32) || defined(_WIN64)
#define VISTK_EXPORT __declspec(dllexport)
#define VISTK_IMPORT __declspec(dllimport)
#define VISTK_NO_EXPORT
#define VISTK_DEPRECATED __declspec(deprecated)
#define VISTK_NO_RETURN __declspec(noreturn)
#define VISTK_MUST_USE_RESULT
#else
#ifdef __GNUC__
#define VISTK_DEPRECATED __attribute__ ((__deprecated__))
#define VISTK_NO_RETURN __attribute__ ((__noreturn__))
#define VISTK_MUST_USE_RESULT __attribute__ ((__warn_unused_result__))
#else
#define VISTK_DEPRECATED
#define VISTK_NO_RETURN
#define VISTK_MUST_USE_RESULT
#endif

#cmakedefine VISTK_HAVE_GCC_VISIBILITY
#ifdef VISTK_HAVE_GCC_VISIBILITY
#define VISTK_EXPORT __attribute__ ((visibility("default")))
#define VISTK_IMPORT __attribute__ ((visibility("default")))
#define VISTK_NO_EXPORT __attribute__ ((visibility("hidden")))
#else
#define VISTK_EXPORT
#define VISTK_IMPORT
#define VISTK_NO_EXPORT
#endif
#endif

#endif // VISTK_CONFIG_H
