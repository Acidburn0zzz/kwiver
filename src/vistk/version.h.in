#ifndef VISTK_VERSION_H
#define VISTK_VERSION_H

#define VISTK_VERSION_MAJOR  @vistk_version_major@
#define VISTK_VERSION_MINOR  @vistk_version_minor@
#define VISTK_VERSION_PATCH  @vistk_version_patch@
#define VISTK_VERSION        "@vistk_version@"

#define VISTK_VERSION_CHECK(major, minor, patch) \
     (((major) <  VISTK_VERSION_MAJOR) \
  || (((major) == VISTK_VERSION_MAJOR) \
   && ((minor) <  VISTK_VERSION_MINOR)) \
  || (((major) == VISTK_VERSION_MAJOR) \
   && ((minor) == VISTK_VERSION_MINOR) \
   && ((patch) <= VISTK_VERSION_PATCH)))

#cmakedefine VISTK_BUILT_FROM_GIT
#define VISTK_GIT_HASH       "@vistk_git_hash@"
#define VISTK_GIT_HASH_SHORT "@vistk_git_hash_short@"
#define VISTK_GIT_DIRTY      "@vistk_git_dirty@"
#define VISTK_GIT_VERSION    VISTK_GIT_HASH VISTK_GIT_DIRTY

#ifdef VISTK_BUILT_FROM_GIT
#define VISTK_VERSION_FULL   VISTK_VERSION ".git" VISTK_GIT_VERSION
#else
#define VISTK_VERSION_FULL   VISTK_VERSION
#endif

#endif // VISTK_VERSION_H
